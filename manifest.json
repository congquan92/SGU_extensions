{
  "manifest_version": 3,
  "name": "SGU Extension Enhanced",
  "version": "2.1.0",
  "description": "Hỗ trợ các tính năng tiện ích cho sinh viên SGU với nhiều cải tiến mới - Enhanced version with improved features and security",
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": ["https://thongtindaotao.sgu.edu.vn/public/api*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/pikachu.png",
      "48": "icons/pikachu.png",
      "128": "icons/pikachu.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "tkb_viewer.html",
        "tkb_viewer.js",
       "html2canvas.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/pikachu.png",
    "48": "icons/pikachu.png",
    "128": "icons/pikachu.png"
  }
}
